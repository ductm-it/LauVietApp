<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".Activity.ThemSanPhamActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarThem"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleTextColor="#ffff"
        android:background="@color/toolbaradmin"
        app:title="Thêm món ăn"></androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <TextView
            android:textColor="@color/input_login"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:text="Tên món ăn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <EditText
            android:background="@drawable/input_designment_admin"
            android:id="@+id/editTenSP"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Tên món ăn"
            android:inputType="textCapWords"
            android:padding="10dp"
            android:textColor="@color/input_register"
            android:textColorHint="@color/input_register_hint" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/input_login"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingLeft="10dp"
                    android:text="Mã loại món ăn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <EditText
                    android:id="@+id/editMaLoaiSP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_designment_admin"
                    android:hint="Mã loại món ăn"
                    android:inputType="textCapWords"
                    android:padding="10dp"
                    android:textColor="@color/input_register"
                    android:textColorHint="@color/input_register_hint" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="50dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/input_login"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingLeft="10dp"
                    android:text="Giá"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <EditText
                    android:id="@+id/editGiaSP"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_designment_admin"
                    android:hint="Giá"
                    android:inputType="textCapWords"
                    android:padding="10dp"
                    android:textColor="@color/input_register"
                    android:textColorHint="@color/input_register_hint" />
            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/input_login"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:textSize="20sp"
                    android:text="Loại"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <EditText
                    android:id="@+id/editMauSP"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_designment_admin"
                    android:hint="Loại"
                    android:inputType="textCapWords"
                    android:padding="10dp"
                    android:textColorHint="@color/input_register_hint"
                    android:textColor="@color/input_register"   />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="50dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/input_login"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingLeft="10dp"
                    android:text="Nguyên liệu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <EditText

                    android:id="@+id/editChatLieuSP"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_designment_admin"
                    android:hint="Nguyên liệu"
                    android:inputType="textCapWords"
                    android:padding="10dp"
                    android:textColor="@color/input_register"
                    android:textColorHint="@color/input_register_hint" />
            </LinearLayout>


        </LinearLayout>
        <TextView
            android:textColor="@color/input_login"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Mô tả"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <EditText
            android:background="@drawable/input_designment_admin"
android:paddingLeft="7dp"
            android:paddingTop="5dp"
            android:id="@+id/editMoTaSP"
            android:hint="Mô tả"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/input_register"
            android:textColorHint="@color/input_register_hint"
            android:gravity="top|left"
            android:inputType="textMultiLine"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:lines="6"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:scrollHorizontally="false" />
        <TextView
            android:textColor="@color/input_login"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Link"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <EditText
            android:textColor="@color/input_register"
            android:textColorHint="@color/input_register_hint"
            android:hint="Link ảnh"
            android:id="@+id/editAnhSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_designment_admin"
            android:gravity="top|left"
            android:paddingTop="5dp"
            android:paddingLeft="7dp"
            android:inputType="textMultiLine"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:lines="4"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:scrollHorizontally="false" />
    </LinearLayout>
    <Button
        android:background="@drawable/buttonsdark"
        android:textColor="@color/white"
        android:id="@+id/btnThemSP"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Thêm"></Button>
</LinearLayout>