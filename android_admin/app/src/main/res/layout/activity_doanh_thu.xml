<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".Activity.DoanhThuActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarDoanhThu"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolbaradmin"
        app:titleTextColor="#ffff"
        app:title="THỐNG KÊ "></androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <Button
            android:background="@drawable/buttonsdark"
            android:textSize="20sp"
            android:textColor="#fff"  
            android:id="@+id/btntopSP"
            android:textAllCaps="false"
            android:text="Top sản phẩm bán chạy nhất"
            android:layout_margin="20sp"
            android:layout_width="match_parent"
            android:layout_height="70dp"></Button>
        <Button
            android:background="@drawable/buttonsdark"
            android:textSize="20sp"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:id="@+id/btntopTK"
            android:text="Top khách hàng mua nhiều nhất"
            android:layout_margin="20sp"
            android:layout_width="match_parent"
            android:layout_height="70dp"></Button>
    </LinearLayout>
</LinearLayout>