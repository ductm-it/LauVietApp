<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".Activity.CapNhatTaiKhoanActivity">
    <androidx.appcompat.widget.Toolbar

        android:id="@+id/toolbarCapNhatTK"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleTextColor="#ffff"
        android:background="@color/toolbaradmin"
        app:title="CẬP NHẬT TÀI KHOẢN"></androidx.appcompat.widget.Toolbar>

    <LinearLayout

        android:layout_marginTop="20dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <TextView
            android:textColor="@color/input_login"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Tên đăng nhập"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <EditText
            android:background="@drawable/input_designment_admin"
            android:id="@+id/updateTenTK"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Tên đăng nhập"
            android:inputType="textCapWords"
            android:padding="10dp"
            android:textColor="@color/input_register"
            android:textColorHint="@color/input_register_hint" />

        <TextView
            android:layout_marginTop="10dp"
            android:textColor="@color/input_login"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Mật khẩu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <EditText
            android:background="@drawable/input_designment_admin"
            android:id="@+id/updateMatKhau"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu"
            android:inputType="textCapWords"
            android:padding="10dp"
            android:textColor="@color/input_register"
            android:textColorHint="@color/input_register_hint" />

        <TextView
            android:layout_marginTop="10dp"
            android:textColor="@color/input_login"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <EditText
            android:background="@drawable/input_designment_admin"
            android:id="@+id/updateEmail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textCapWords"
            android:padding="10dp"
            android:textColor="@color/input_register"
            android:textColorHint="@color/input_register_hint" />

        <TextView
            android:layout_marginTop="10dp"
            android:textColor="@color/input_login"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Địa chỉ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <EditText
            android:background="@drawable/input_designment_admin"
            android:id="@+id/updateDiaChi"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Địa chỉ"
            android:inputType="textCapWords"
            android:padding="10dp"
            android:textColor="@color/input_register"
            android:textColorHint="@color/input_register_hint" />

        <TextView
            android:layout_marginTop="10dp"
            android:textColor="@color/input_login"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Điện thoại"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <EditText
            android:background="@drawable/input_designment_admin"
            android:id="@+id/updateDienThoai"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:padding="10dp"
            android:textColor="@color/input_register"
            android:hint="Điện thoại"
            android:textColorHint="@color/input_register_hint" />
        <TextView
            android:layout_marginTop="10dp"
            android:textColor="@color/input_login"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Quyền"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <EditText
            android:background="@drawable/input_designment_admin"
            android:id="@+id/updatequyen"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:padding="10dp"
            android:hint="Quyền người dùng"
            android:textColor="@color/input_register"
            android:textColorHint="@color/input_register_hint" />
<!--        <Spinner-->
<!--            android:background="@drawable/spinner"-->
<!--            android:id="@+id/updatequyen"-->
<!--            android:textAlignment="center"-->
<!--            android:layout_margin="10dp"-->
<!--            android:layout_width="140sp"-->
<!--            android:layout_height="45sp">-->
<!--        </Spinner>-->
    </LinearLayout>

    <Button
        android:background="@drawable/buttonsdark"
        android:textColor="#fff"
        android:id="@+id/btnCapNhatTK"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Cập nhật"></Button>
</LinearLayout>