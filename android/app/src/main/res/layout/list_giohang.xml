<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/duongvien"
    android:weightSum="10">
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_margin="5dp">
        <ImageView
            android:adjustViewBounds="true"
            android:id="@+id/imageviewgiohang"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="5dp"></ImageView>
    </LinearLayout>
    <LinearLayout

        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_weight="7"
        android:layout_margin="5dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:text="Tên món hàng"
            android:textSize="25sp"
            android:id="@+id/textviewtengiohang"
            android:textColor="#10100f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:textStyle="bold"
            android:text="Giá món hàng"
            android:layout_marginTop="3dp"
            android:textSize="20sp"
            android:textColor="#030303"
            android:id="@+id/textviewgiagiohang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buttontang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:focusable="false"
                android:text="+"
                android:textSize="20sp"></Button>

            <Button
                android:background="@null"
                android:focusable="false"
                android:text="1"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:id="@+id/buttongiatri"
                android:layout_width="70dp"
                android:layout_height="wrap_content"></Button>

            <Button
                android:id="@+id/buttongiam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:focusable="false"
                android:text="Huỷ món"
                android:textSize="14sp"></Button>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>