<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" >

        <androidx.appcompat.widget.Toolbar
            app:titleTextColor="#ffff"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/mot"
            app:title="Đăng Nhập"></androidx.appcompat.widget.Toolbar>



    <LinearLayout
        android:layout_marginTop="50sp"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo2" />
        <TextView
            android:id="@+id/textLauviet"
            android:layout_marginBottom="20dp"
            android:textSize="30sp"
            android:text="Lẩu Việt"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_below="@+id/textLauviet"
    android:layout_marginTop="15dp"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iconLogin"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:background="@drawable/images"
        android:src="@drawable/login"/>
    <EditText
        android:id="@+id/editUsername"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/inputs_designment"
        android:padding="20dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/iconLogin"
        android:hint="Username"
        android:inputType="textEmailAddress"
        android:textColor="@color/input_login"
        android:textColorHint="@color/input_login_hint"
        android:textSize="17sp"
        android:textStyle="bold"
        tools:ignore="NotSibling" />
</RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iconPassword"
                android:layout_width="40dp"
                android:layout_height="62dp"
                android:background="@drawable/images"
                android:src="@drawable/password"/>
            <EditText
                android:id="@+id/editPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/inputs_designment"
                android:padding="20dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/iconPassword"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/input_login"
                android:textColorHint="@color/input_login_hint"
                android:textSize="17sp"
                android:textStyle="bold"
                tools:ignore="NotSibling" />
        </RelativeLayout>




        <!-- Login Button -->

        <!-- Link to Login Screen -->

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="@drawable/buttons"
            android:padding="17dp"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:text="Đăng nhập"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="@null"
            android:padding="17dp"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:text="Đăng kí"
            android:textColor="@color/colorPrimaryLight" />
    </LinearLayout>

</LinearLayout>